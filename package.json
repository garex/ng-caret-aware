{
  "name": "ng-caret-aware",
  "version": "0.3.2",
  "description": "AngularJS directive for caret aware elements",
  "main": "dist/caretaware.min.js",
  "author": {
    "name": "Leo Di Donato",
    "email": "leodidonato@gmail.com",
    "url": "http://git.io/leodido"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/leodido/ng-caret-aware.git"
  },
  "homepage": "http://github.com/leodido/ng-caret-aware",
  "devDependencies": {
    "bower": "^1.3.12",
    "coveralls": "^2.11.2",
    "del": "^1.1.1",
    "gulp": "^3.8.11",
    "gulp-bump": "^0.2.2",
    "gulp-closure-compiler": "^0.2.19",
    "gulp-coveralls": "^0.1.4",
    "gulp-debug": "^2.0.1",
    "gulp-gjslint": "^0.1.4",
    "gulp-help": "^1.3.3",
    "gulp-jsbeautifier": "0.0.5",
    "gulp-json-editor": "^2.2.1",
    "gulp-rename": "^1.2.2",
    "gulp-util": "~3.0.4",
    "http-server": "^0.10.0",
    "jasmine-core": "2.3.0",
    "jasmine-spec-reporter": "^2.1.0",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-coverage": "^0.3.1",
    "karma-firefox-launcher": "^1.0.1",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-spec-reporter": "0.0.16",
    "lcov-parse": "^0.0.10",
    "minimist": "^1.1.0",
    "node.extend": "^1.1.3",
    "phantomjs-prebuilt": "^2.1.14",
    "protractor": "^5.1.1",
    "run-sequence": "^1.0.2",
    "shx": "^0.2.2"
  },
  "scripts": {
    "clean:deps": "shx rm -f node_modules browser_components",
    "clean:logs": "shx rm -f *.log",
    "preclean": "npm run clean:logs",
    "postclean": "npm run clean:deps",
    "wait:webdriver": "while ! nc -z 127.0.0.1 4444; do sleep 1; done",
    "clear:webdriver": "fuser -k -n tcp 4444",
    "wait:server": "while ! nc -z 127.0.0.1 $npm_package_config_server_port; do sleep 1; done",
    "clear:server": "fuser -k -n tcp $npm_package_config_server_port",
    "webdriver:up": "webdriver-manager update",
    "webdriver:go": "webdriver-manager start",
    "protractor": "protractor $npm_package_config_dir_test/protractor.conf.js",

    "deps": "bower install",
    "clean": "shx rm -rf $npm_package_config_dir_dist $npm_package_config_dir_coverage",
    "server": "http-server -p $npm_package_config_server_port .",
    "production": "gulp build --env production --banner",
    "development": "gulp build --env development --banner",
    "compile": "npm run development && npm run production",
    "test": "karma start $npm_package_config_dir_test/karma.conf.js",
    "e2e": "$npm_package_config_dir_test/e2e.sh"
  },
  "keywords": [
    "caret",
    "cursor",
    "position",
    "selection",
    "input",
    "textarea",
    "angular",
    "ng",
    "directive",
    "controller",
    "closure",
    "gulp"
  ],
  "config": {
    "server": {
      "port": 8000
    },
    "dir": {
      "source": "lib",
      "dist": "dist",
      "example": "example",
      "test": "test",
      "unit": "test/unit",
      "e2e": "test/e2e",
      "coverage": "coverage"
    }
  }
}
